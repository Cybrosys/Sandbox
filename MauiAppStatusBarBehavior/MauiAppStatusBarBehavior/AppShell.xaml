<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppStatusBarBehavior.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAppStatusBarBehavior"
    Title="MauiAppStatusBarBehavior"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="First"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="home"
            Route="MainPage" />
        <ShellContent
            Title="Second"
            ContentTemplate="{DataTemplate local:SecondPage}"
            Icon="home"
            Route="SecondPage" />
        <ShellContent
            Title="Third"
            ContentTemplate="{DataTemplate local:ThirdPage}"
            Icon="home"
            Route="ThirdPage" />
    </TabBar>
</Shell>
